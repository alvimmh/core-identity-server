
@{
    ViewData["Title"] = "Sign In";
}

<h1>Welcome</h1>

<div class="mt-4">
    <label for="email-address-input" class="form-label">Enter email address</label>
    <input type="email" class="form-control" id="email-address-input">
    <div>
        <button type="button" class="btn btn-link btn-sm">Find email</button>
    </div>

    <div class="mt-3">
        <label for="totp-code-input" class="form-label">Enter TOTP code</label>
        <input type="email" class="form-control" id="totp-code-input">
        <div>
            <button type="button" class="btn btn-link btn-sm">Reset TOTP access</button>
        </div>
    </div>

    <div class="d-grid col-6 mt-5 mx-auto">
        <button type="button" class="btn btn-secondary btn-md">Sign In</button>
    </div>
</div>
