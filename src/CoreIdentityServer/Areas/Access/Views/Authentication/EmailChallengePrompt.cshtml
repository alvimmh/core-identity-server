
@{
    ViewData["Title"] = "Reset TOTP Access";
    bool userLoggedIn = true;
}

<p>Reset TOTP access</p>

@{
    if (!userLoggedIn) {
        <p>To keep your account safe, we need to verify its you. We will send you a secure 6-digit code to your email.</p>
        <p>Please enter your email below.</p>

        <div class="mt-4">
            <label for="email-address-input" class="form-label">Enter email address</label>
            <input type="email" class="form-control" id="email-address-input">

            <div class="d-grid col-6 mt-3 mx-auto">
                <button type="button" class="btn btn-secondary btn-md">Continue</button>
            </div>
        </div>
    }
    else {
        <p>To keep your account safe, we need to verify its you. We will send you a secure 6-digit code to your email. Please enter this code in the next page to complete verification.</p>

        <div class="mt-4">
            <div class="d-grid col-6 mt-3 mx-auto">
                <button type="button" class="btn btn-secondary btn-md">Continue</button>
            </div>
        </div>
    }
}
