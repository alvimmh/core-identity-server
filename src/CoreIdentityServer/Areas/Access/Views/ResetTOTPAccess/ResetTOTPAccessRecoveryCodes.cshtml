@model ResetTOTPAccessRecoveryCodesInputModel

<div class="mt-5 mb-3">
    <h1>Reset TOTP Access Recovery Codes</h1>
    <p class="mt-4">Resetting your recovery codes will invalidate current codes and generate new ones.</p>

    <form
        asp-area="Access"
        asp-controller="ResetTOTPAccess"
        asp-action="ResetTOTPAccessRecoveryCodes"
        method="post"
    >
        <input type="text" asp-for="Id" value="@Model.Id" hidden>

        <div class="d-grid col col-md-5 mt-3">
            <button type="submit" class="btn btn-danger btn-md">Reset</button>
        </div>
    </form>
</div>
