@model ProspectiveUserInputModel
@{
    ViewData["Title"] = "Index";

    string privacyPolicyUrl = Url.Action("privacypolicy", "correspondence", new { Area = "clientservices" });
    string termsOfServiceUrl = Url.Action("termsofservice", "correspondence", new { Area = "clientservices" });
}

<div class="row justify-content-center">
    <div class="col-xs-12 col-md-8 col-lg-6 col-xl-4">
        <h1>Welcome,</h1>

        <p>Please confirm your email address to get started.</p>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form
            asp-area="Enroll"
            asp-controller="SignUp"
            asp-action="RegisterProspectiveUser"
            method="post"
        >
            <div class="mt-4">
                <div>
                    <label for="email-address-input" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email-address-input" asp-for="Email"> 
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <label for="first-name-input" class="form-label">First Name</label>
                    <input type="string" class="form-control" id="first-name-input" asp-for="FirstName"> 
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <label for="last-name-input" class="form-label">Last Name</label>
                    <input type="string" class="form-control" id="last-name-input" asp-for="LastName"> 
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <partial name="../../../../Views/Shared/_Captcha.cshtml" />
                </div>

                <div class="mt-3">
                    <p class="text-center font-size-7">By continuing to use this site, you agree to our <a href="@privacyPolicyUrl">privacy policy</a> and accept our <a href="@termsOfServiceUrl">terms of service</a>.</p>
                </div>

                <div class="d-grid col-6 mt-3 mx-auto">
                    <button type="submit" class="btn btn-secondary btn-md">Continue</button>
                </div>
            </div>
        </form>
    </div>
</div>
